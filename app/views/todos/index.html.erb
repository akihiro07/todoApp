<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Detail</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <!-- 「todo」だけで「todo.id」 を使って、 「todos/:id」というパスを自動的に作成 -->
        <td><%= link_to todo do %><%= todo.title %><% end %></td> <!-- polymorphic_path機能 --><!-- todo_path(todo)と同じ意味 -->
        <td><%= todo.detail %></td>
        <td><%= todo.status %></td>
        <td><%= link_to '完了', edit_todo_path(todo) %></td>
        <td><%= link_to '編集', edit_todo_path(todo) %></td> <!-- todoにはtodo.idがautoで入る -->
        <td><%= link_to '削除', todo, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>
